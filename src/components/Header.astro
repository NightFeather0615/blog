import ThemeToggle from './ThemeToggleButton';
---

<header class="fixed w-full p-2 z-20 backdrop-blur-md">
	<div class="mx-auto max-w-3xl">
		<nav class="flex items-center gap-3 text-base">
      <a href="/blog" class="group">
				<h2 class="font-semibold p-2 font-mplus text-lg flex gap-1 group-hover:underline underline-offset-2">
					<GithubAvatarIcon />NightFeather
				</h2>
      </a>
			<div class="items-center gap-6 hidden md:flex">
				<HeaderLink class={`hover:underline underline-offset-2`} href="/blog/posts/6eb09e66-756e-44bd-903b-856aa6025a22">About</HeaderLink>
				<HeaderLink class={`hover:underline underline-offset-2`} href="https://github.com/NightFeather0615" target="_blank"><IoLogoGithub /> GitHub</HeaderLink>
